#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int at[10], bt[10], rt[10], wt[10], tat[10], ct[10];
    int t = 0, completed = 0, smallest = -1;
    float total_wt = 0, total_tat = 0;

    for(int i = 0; i < n; i++) {
        printf("Enter Arrival Time and Burst Time of P%d: ", i + 1);
        scanf("%d %d", &at[i], &bt[i]);
        rt[i] = bt[i];
        wt[i] = tat[i] = ct[i] = 0;
    }

    printf("\nProcess\tAT\tBT\tCT\tTAT\tWT\n");

    while(completed != n) {
        smallest = -1;

        // find process with smallest remaining time among arrived processes
        for(int i = 0; i < n; i++) {
            if(at[i] <= t && rt[i] > 0) {
                if(smallest == -1 || rt[i] < rt[smallest])
                    smallest = i;
            }
        }

        if(smallest == -1) { // no process has arrived yet
            t++;
            continue;
        }

        rt[smallest]--;
        t++;

        if(rt[smallest] == 0) { // process completed
            completed++;
            ct[smallest] = t;
            tat[smallest] = ct[smallest] - at[smallest];
            wt[smallest] = tat[smallest] - bt[smallest];
        }
    }

    for(int i = 0; i < n; i++) {
        total_tat += tat[i];
        total_wt += wt[i];
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n",
               i + 1, at[i], bt[i], ct[i], tat[i], wt[i]);
    }

    printf("\nAverage Turnaround Time = %.2f", total_tat / n);
    printf("\nAverage Waiting Time = %.2f\n", total_wt / n);

    return 0;
}
